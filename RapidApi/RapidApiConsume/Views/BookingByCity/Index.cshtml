@model List<BookingApiViewModel.Result>

@{
    Layout = null;
    int count = 0;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    @using (Html.BeginForm("Index", "BookingByCity", FormMethod.Post))
    {
        <label>Location ID code</label>
        <input type="text" class="form-control" name="cityID" />
        <br />
        <button class="btn btn-primary">Search Location Hotels</button>
    }
    <br /><br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Review Score</th>
            <th>Details</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.name</td>
                <td>@item.reviewScore</td>
                <td><a href="#" class="btn btn-outline-dark">Details</a></td>
            </tr>
        }
    </table>
</div>