@model List<BookingApiLocationSearchViewModel>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <br /><br />
    @using(Html.BeginForm("Index","SearchLocationID", FormMethod.Post))
    {
        <label>Locaiton Name</label>
        <input type="text" class="form-control" name="cityName"/>
        <br />
        <button class="btn btn-primary">Search by ID for Location</button>
    }
    <table class="table table-bordered">
        <tr>
            <th>Destination</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.dest_id</td>
            </tr>
        }
    </table>
    <br />
    <a href="/BookingByCity/Index/" class="btn btn-info">New Hotel Reservation</a>
</div>