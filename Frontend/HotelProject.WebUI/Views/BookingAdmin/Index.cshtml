@model List<ResultBookingDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h4>Reservations</h4>
            </div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Guest</th>
                            <th>Checkin Date</th>
                            <th>Checkout Date</th>
                            <th>Status</th>
                            <th>Confirm</th>
                            <th>Cancel</th>
                            <th>Add to Que</th>
                            <th>Update</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <th>@count</th>
                                <td>@item.Name</td>
                                <td>@(((DateTime)item.Checkin).ToString("dd-MMM-yyyy"))</td>
                                <td>@(((DateTime)item.CheckOut).ToString("dd-MMM-yyyy"))</td>
                                <td><span class="badge badge-primary px-2">@item.Status</span></td>
                                <td><a href="#" class="btn mb-1 btn-success">Confirm</a></td>
                                <td><a href="#" class="btn mb-1 btn-danger">Cancel</a></td>
                                <td><a href="#" class="btn mb-1 btn-primary">Add to Que</a></td>
                                <td><a href="#" class="btn mb-1 btn-info">Update</a></td>
                                <td><a href="#" class="btn mb-1 btn-dark">Details</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

